{
  "manifest_version": 3,
  "name": "AWS SSO Enhance",
  "version": "0.0.2",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/content/ssoInfo.tsx"],
      "matches": ["https://*.awsapps.com/*"]
    }
  ],
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
